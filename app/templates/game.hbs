{{#mcim-struc}}
  <form>
    <div class="spc-bottom-2">
      <h1 class="font-size-7 text-center">
        {{equation.operator_one}}
        {{equation.operation}}
        {{equation.operator_two}}
        =
      </h1>
    </div>

    <div class="spc-bottom-2 text-indent-3">
      {{input type="text"
              value=equation.user_input
              name="equation-user-input"
              class="form-control input-lg"
              autofocus=true
              autocomplete="off"
              required=true}}
    </div>

    <div class="text-center">
      <button class="btn btn-success btn-block" {{action 'submit'}}>
        Submit
        <label class="label-in-btn label-in-btn-success">{{score}}</label>
      </button>
    </div>
  </form>
{{/mcim-struc}}
